<% title "Admin/Posts" %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Publication</th>
    <th>Author</th>
    <th>Source</th>
    <th>Published</th>
    <th>Active</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.publication %></td>
      <td><%= post.author %></td>
      <td><%= post.source %></td>
      <td><%= post.published %></td>
      <td><%= post.active %></td>
      <td><%= link_to "Show", [:admin, post] %></td>
      <td><%= link_to "Edit", edit_admin_post_path(post) %></td>
      <td><%= link_to "Destroy", [:admin, post], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Admin/Post", new_admin_post_path %></p>
