<%content_for :head do%>
<%= javascript_include_tag "responsiveslides.min.js"%>
<%=stylesheet_link_tag "responsiveslides.css"%>
<script type="text/javascript">

$(document).ready(function() {
	var nav = $('.header');   
	$(window).scroll(function () { 
		if ($(this).scrollTop() > 71) { 
			nav.addClass("header_bg"); } 
		else { 
			nav.removeClass("header_bg"); 
		} });	
		
	$(window).scroll(function () {
	  $(".header111").css("background-image", "url(/images/bg_header.png)");
	  $(".header111").addClass("header_bg");
	});
		
	$("#slider4").responsiveSlides({
        auto: false,
        pager: false,
        nav: true,
        speed: 500,
        namespace: "callbacks",
        before: function () {
          $('.events').append("<li>before event fired.</li>");
        },
        after: function () {
          $('.events').append("<li>after event fired.</li>");
        }
      });




});
	
</script>
